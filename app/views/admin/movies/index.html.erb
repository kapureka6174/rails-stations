<h1>Movie管理ページ</h1>
<table>
  <tr>
    <th>ID</th>
    <th>タイトル</th>
    <th>公開年</th>
    <th>概要</th>
    <th>画像URL</th>
    <th>上映状態</th>
    <th>登録日時</th>
    <th>更新日時</th>
  </tr>
  <% @movies.each do |movie| %>
    <tr>
      <td><%= movie.id %></td>
      <td><%= movie.name %></td>
      <td><%= movie.year %></td>
      <td><%= movie.description %></td>
      <td><%= image_tag movie.image_url %></td>
      <td><%= movie.is_showing ? '上映中' : '終了' %></td>
      <td><%= movie.created_at %></td>
      <td><%= movie.updated_at %></td>
    </tr>
  <% end %>
  <tr>
    <td>データセル</td>
  </tr>
</table>